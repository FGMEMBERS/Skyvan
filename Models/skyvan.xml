    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Interieur -->
  <model>
    <path>Aircraft/Skyvan/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>

  <!-- Immatriculatoin -->
  <model>
    <path>Aircraft/Skyvan/Models/Immat/immat.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>

  <!-- Les hélices --> 
  <animation>
    <name>HeliceGauche</name>
    <object-name>bolG</object-name>
    <object-name>heliceG</object-name>
    <object-name>propdiscG</object-name>
    <object-name>propblurG</object-name>
  </animation>

  <animation>
    <name>HeliceDroite</name>
    <object-name>bolD</object-name>
    <object-name>heliceD</object-name>
    <object-name>propdiscD</object-name>
    <object-name>propblurD</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdiscG</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblurG</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>heliceG</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceGauche</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -2.857 </x-m>
      <y-m> -2.628 </y-m>
      <z-m>  0.545 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdiscD</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[1]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblurD</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[1]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[1]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>heliceD</object-name>
    <condition>
      <less-than>
        <property>engines/engine[1]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceDroite</object-name>
    <property>engines/engine[1]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -2.857 </x-m>
      <y-m>  2.628 </y-m>
      <z-m>  0.545 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>-25.0</factor>
    <axis>
      <x1-m> -0.608 </x1-m>
      <y1-m> -6.813 </y1-m>
      <z1-m>  1.001 </z1-m>
      <x2-m> -0.608 </x2-m>
      <y2-m> -9.731 </y2-m>
      <z2-m>  1.093 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>-25.0</factor>
    <axis>
      <x1-m> -0.608 </x1-m>
      <y1-m>  9.731 </y1-m>
      <z1-m>  1.093 </z1-m>
      <x2-m> -0.608 </x2-m>
      <y2-m>  6.813 </y2-m>
      <z2-m>  1.001 </z2-m>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>-35.0</factor>
    <axis>
      <x1-m> -0.608 </x1-m>
      <y1-m> -1.163 </y1-m>
      <z1-m>  0.776 </z1-m>
      <x2-m> -0.608 </x2-m>
      <y2-m> -6.813 </y2-m>
      <z2-m>  0.954 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>-35.0</factor>
    <axis>
      <x1-m> -0.608 </x1-m>
      <y1-m>  6.813 </y1-m>
      <z1-m>  0.954 </z1-m>
      <x2-m> -0.608 </x2-m>
      <y2-m>  1.163 </y2-m>
      <z2-m>  0.776 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>25.0</factor>
    <center>
      <x-m> 5.541 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.120 </z-m>
    </center>
    <axis>
      <x>  0.00 </x>
      <y>  1.00 </y> 
      <z>  0.00 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>directionG</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>25.0</factor>
    <center>
      <x-m>  5.372 </x-m>
      <y-m> -3.047 </y-m>
      <z-m>  1.277 </z-m>
    </center>
    <axis>
      <x>  0.00 </x>
      <y>  0.00 </y>
      <z> -1.00 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>directionD</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>25.0</factor>
    <center>
      <x-m>  5.372 </x-m>
      <y-m>  3.047 </y-m>
      <z-m>  1.277 </z-m>
    </center>
    <axis>
      <x>  0.00 </x>
      <y>  0.00 </y>
      <z> -1.00 </z>
    </axis>
  </animation>
  
  <!-- Rotation de la roue avant en fonction de la gouverne de direction -->
  <animation>
    <name>RoueAvant</name>
    <object-name>roueA</object-name>
    <object-name>axeA</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RoueAvant</object-name>
    <property>controls/flight/rudder</property>
    <factor> 40.0 </factor>
    <center>
      <x-m> -5.470 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.967 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y>  0.000 </y>
      <z> -1.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -5.470 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.967 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -0.879 </x-m>
      <y-m> -2.141 </y-m>
      <z-m> -1.903 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -0.879 </x-m>
      <y-m>  2.141 </y-m>
      <z-m> -1.903 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Porte équipage avant -->
  <animation>
    <name>PorteGauche</name>
    <object-name>porteG</object-name>
    <object-name>vitreG</object-name>
  </animation>

  <animation>
    <name>PorteDroite</name>
    <object-name>porteD</object-name>
    <object-name>vitreD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteGauche</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 175 </factor>
    <center>
      <x-m> -3.933 </x-m>
      <y-m> -1.138 </y-m>
      <z-m> -0.302 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteDroite</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -175 </factor>
    <center>
      <x-m> -3.933 </x-m>
      <y-m>  1.138 </y-m>
      <z-m> -0.302 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Baie arrière -->
  <animation>
    <type>rotate</type>
    <object-name>baie</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor>27</factor>
    <center>
      <x-m>  5.371 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.065 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Effets lumineux -->
  <model>
    <path>Aircraft/Skyvan/Models/light/beacon.xml</path>
    <offsets>
      <x-m> 2.204 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.605 </z-m>
    </offsets>
  </model>

  <model>
    <name>LampeGauche</name>
    <path>Aircraft/Skyvan/Models/light/RedLight.xml</path>
    <offsets>
      <x-m> -1.762 </x-m>
      <y-m> -9.879 </y-m>
      <z-m>  1.097 </z-m>
    </offsets>
  </model>

  <model>
    <name>LampeDroite</name>
    <path>Aircraft/Skyvan/Models/light/GreenLight.xml</path>
    <offsets>
      <x-m> -1.762 </x-m>
      <y-m>  9.879 </y-m>
      <z-m>  1.097 </z-m>
    </offsets>
  </model>
