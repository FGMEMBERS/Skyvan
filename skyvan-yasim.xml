<!-- SHORT SC.7 Skyvan : 2008 BARANGER Emmanuel 

     wingspan     : 19.80 m (64 ft 11 in)
     length       : 12.20 m (40 ft  1 in)
     height       :  4.60 m (15 ft  1 in)
     Moteurs      : 2 turboprops Garrett AiResearch TPE-331-201 (715 hp each)
     Empty weight : 3331 kg (7344 lb)
     Cruise speed : 315 km/h (176 kts)
-->

<airplane mass="7344">

  <approach speed="76" aoa="6">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.4"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="0.5"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="0.4"/>
    <control-setting axis="/controls/engines/engine[1]/mixture" value="1.0"/>
    <control-setting axis="/controls/engines/engine[1]/propeller-pitch" value="0.5"/>
    <control-setting axis="/controls/flight/flaps" value="1.0"/>
  </approach>

  <cruise speed="176" alt="7600">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.7"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="0.7"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="1.0"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="0.7"/>
    <control-setting axis="/controls/engines/engine[1]/mixture" value="0.7"/>
    <control-setting axis="/controls/engines/engine[1]/propeller-pitch" value="1.0"/>
    <control-setting axis="/controls/flight/flaps" value="0.0"/>
  </cruise>

  <cockpit x="4.452" y="0.584" z="0.192"/>

  <fuselage ax="6.042" ay="0" az="-0.374" bx="-6.050" by="0" bz="-0.374" width="2.369" taper="0.5" midpoint="0.25"/>

  <wing x="1.036" y="1.094" z="0.819" 
        chord="1.837" 
        length="8.698" 
        taper="1.0" 
        camber="0.123">
        <stall aoa="16" width="6" peak="1.5"/>
        <flap0 start="0.019" end="0.620" lift="1.4" drag="1.4"/>
        <flap1 start="0.620" end="1.000" lift="1.4" drag="1.2"/>

        <control-input axis="/controls/flight/flaps" control="FLAP0"/>
        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>

        <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>

        <control-speed control="FLAP0" transition-time="5"/>
  </wing>

  <hstab x="-5.411" y="0" z="0.126"
         chord="1.301"
         length="3.000" 
         taper="1.0"
         sweep="10">
         <stall aoa="14" width="3" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.8" drag="1.9"/>

         <control-input axis="/controls/flight/elevator" control="FLAP0" />
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-5.387" y="3.018" z="-0.503"
         chord="1.446"
         length="2.855" 
         taper="1.0"
         sweep="4">
         <stall aoa="12" width="3" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.5" drag="1.5"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
  </vstab>

  <vstab x="-5.387" y="-3.018" z="-0.503"
         chord="1.446"
         length="2.855" 
         taper="1.0"
         sweep="4">
         <stall aoa="14" width="3" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.5" drag="1.5"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
  </vstab>

  <!-- Moteur gauche
                 
                                         Rayon * Rayon * Mass(kg)   1.25*1.25 * 487.15
                 moment d'après la doc : ________________________ = __________________ = 253.72
                                                     3                      3
  -->
  <propeller x="2.116" y="2.628" z="0.578"
             mass="1500" 
             moment="253.72" 
             radius="1.25" 
             cruise-speed="176" 
             cruise-rpm="1600" 
             cruise-power="700" 
             cruise-alt="5000" 
             min-rpm="220" 
             max-rpm="1800"> 
             <actionpt x="2.857" y="2.628" z="0.545"/>
             <control-input axis="/controls/engines/engine[0]/propeller-pitch" control="ADVANCE"/>
             <turbine-engine eng-power="715" 
                             eng-rpm="2700" 
                             alt="8000" 
                             flat-rating="700" 
                             min-n2="70" 
                             max-n2="100"> 
                             <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
                             <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
                             <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
                             <control-input axis="/controls/engines/engine[0]/boost" control="BOOST"/>
             </turbine-engine>
  </propeller>

  <propeller x="2.116" y="-2.628" z="0.578"
             mass="1500" 
             moment="253.72" 
             radius="1.25" 
             cruise-speed="176" 
             cruise-rpm="1600" 
             cruise-power="700" 
             cruise-alt="5000" 
             min-rpm="220" 
             max-rpm="1800"> 
             <actionpt x="2.857" y="-2.628" z="0.545"/>
             <control-input axis="/controls/engines/engine[1]/propeller-pitch" control="ADVANCE"/>
             <turbine-engine eng-power="715" 
                             eng-rpm="2700" 
                             alt="8000" 
                             flat-rating="700" 
                             min-n2="70" 
                             max-n2="100"> 
                             <control-input axis="/controls/engines/engine[1]/throttle" control="THROTTLE"/>
                             <control-input axis="/controls/engines/engine[1]/starter" control="STARTER"/>
                             <control-input axis="/controls/engines/engine[1]/magnetos" control="MAGNETOS"/>
                             <control-input axis="/controls/engines/engine[1]/boost" control="BOOST"/>
             </turbine-engine>
  </propeller>

  <!-- Roue du nez -->
  <gear x="5.470" y="0.0" z="-2.277" 
        compression="0.1" 
        retract-time="7" 
        on-water="0" 
        on-solid="1"
        spring="1" 
        damp="2">
        <control-input axis="/controls/flight/rudder" control="STEER" square="true" src0="-1.0" src1="1.0" dst0="-0.8" dst1="0.8"/>
  </gear>

  <!-- Roue gauche -->
  <gear x="0.879" y="2.141" z="-2.321" 
        compression="0.2" 
        retract-time="7"
        on-water="0" 
        on-solid="1" 
        spring="1" 
        damp="2">
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
  </gear>

  <!-- Roue droite -->
  <gear x="0.879" y="-2.141" z="-2.321"
        compression="0.2" 
        retract-time="7" 
        on-water="0" 
        on-solid="1"
        spring="1" 
        damp="2">
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
  </gear>

  <tank x="1.03" y="2.5" z="0.57" capacity="1472"/>
  <tank x="1.03" y="-2.5" z="0.57" capacity="1472"/>

  <!-- CG Théorique x=1.036 y=0 z=-1 -->
  <ballast x="2.0" y="0.0" z="-1.0" mass="1000"/>

</airplane>
